<div class="max-w-4xl mx-auto p-4" data-room-code="<%= @room.code %>" data-controller="responses-stream">
  <div class="flex items-center mb-6 gap-4">
    <%= link_to room_path(@room), class: "btn btn-circle btn-ghost" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
    <% end %>
    <h1 class="text-3xl font-bold">Responses for Room <%= @room.code %></h1>
  </div>
  
  <div class="space-y-8">
    <% @questions.each do |question| %>
      <div class="card bg-[#C8C8FF] shadow-xl border border-base-200" id="question-<%= question.id %>">
        <div class="card-body">
          <h2 class="card-title text-xl mb-4 text-gray-800"><%= question.question_text %></h2>
          
          <div class="responses-list space-y-4" data-responses-stream-target="list" data-question-id="<%= question.id %>">
            <% responses = @responses_by_question[question.id] || [] %>
            <% if responses.empty? %>
              <p class="text-base-content/50 italic empty-message">No responses yet...</p>
            <% end %>
            <% responses.each do |response| %>
              <div class="chat chat-start" id="response-<%= response.id %>">
                <div class="chat-bubble chat-bubble-primary flex flex-col gap-1 min-w-[120px]">
                  <div><%= response.response_text %></div>
                  <div class="self-end -mb-1 -mr-1">
                    <button 
                      class="btn btn-ghost btn-xs gap-1 text-white hover:bg-white/20"
                      data-controller="reaction"
                      data-reaction-id-value="<%= response.id %>"
                      data-reaction-liked-value="<%= @liked_response_ids.include?(response.id) %>"
                      data-reaction-count-value="<%= response.response_reactions.size %>"
                      data-action="click->reaction#toggle"
                      title="I relate to this!"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform duration-200" data-reaction-target="icon" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M10.5 1.875a1.125 1.125 0 012.25 0v8.219c.517.017 1.02.066 1.5.146V2.25a1.125 1.125 0 012.25 0v8.219c.517.017 1.02.066 1.5.146V4.875a1.125 1.125 0 012.25 0V15a9.75 9.75 0 01-9.75 9.75c-.385 0-.765-.019-1.138-.057a1.125 1.125 0 01-1.009-1.238l.345-3.454a3 3 0 00-.879-2.121L3.75 14.25a1.125 1.125 0 011.59-1.59l3.543 3.543a.53.53 0 00.75-.75V1.875z" />
                      </svg>
                      <span data-reaction-target="count" class="text-xs"><%= response.response_reactions.size %></span>
                    </button>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
