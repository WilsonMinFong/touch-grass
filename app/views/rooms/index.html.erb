<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">Your Rooms</h1>
  </div>

  <%= form_with url: join_by_code_rooms_path, method: :post, local: true, class: "flex gap-2 justify-center items-center max-w-md mx-auto py-6" do |f| %>
    <%= f.text_field :code, placeholder: "Enter room code...", required: true,
                        class: "input input-bordered input-secondary flex-1" %>
    <%= f.submit "Join Room", class: "btn btn-secondary" %>
  <% end %>

  <div class="flex flex-col w-full border-opacity-50 max-w-md mx-auto">
    <div class="divider">OR</div>
  </div>

  <%= form_with url: rooms_path, method: :post, local: true, class: "flex gap-2 justify-center items-center max-w-md mx-auto py-6" do |f| %>
    <%= f.text_field :name, placeholder: "Enter room name...", required: true,
                        class: "input input-bordered input-primary flex-1" %>
    <%= f.submit "Create Room", class: "btn btn-primary" %>
  <% end %>

  <!-- Session Info (for debugging) -->
  <% if Rails.env.development? %>
    <div class="alert alert-info mb-4">
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="text-sm">Session ID: <code class="px-2 py-1 rounded"><%= session[:user_identity] %></code></span>
      </div>
    </div>
  <% end %>

  <% if @rooms.any? %>
    <div class="overflow-x-auto">
      <table class="table table-zebra">
        <thead>
          <tr>
            <th>Room Name</th>
            <th>Code</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @rooms.each do |room| %>
            <tr class="hover">
              <td>
                <div class="font-semibold"><%= room.name %></div>
              </td>
              <td>
                <div class="badge badge-primary"><%= room.code %></div>
              </td>
              <td>
                <div class="text-sm text-gray-500">
                  <%= room.created_at.strftime("%b %d, %Y") %>
                </div>
              </td>
              <td>
                <div class="flex gap-2">
                  <%= link_to 'View', room_path(room), class: "btn btn-sm btn-outline" %>
                  <button class="btn btn-sm btn-ghost">Edit</button>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="text-gray-500 mb-4">
        <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V5a2 2 0 012-2h4a2 2 0 012 2v2"></path>
        </svg>
      </div>
      <h3 class="text-lg font-semibold mb-2">No rooms yet</h3>
      <p class="text-gray-600 mb-4">Get started by creating your first room.</p>
    </div>
  <% end %>
</div>